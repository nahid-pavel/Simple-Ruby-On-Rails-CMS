
	

     
         <% @sections.visible.sorted each do |section| %>
           <div class="section">

       <h2 id ="image-content"><%= link_to(section.name,{:controller=>"public",:action=>"comments_index",:section_id=>section.id}) %></h2>
       
       <% if section.image.present? %>
       <p id ="image"> <%= image_tag section.image.url(:medium) %> </p>
       <p id="content1"><%= section.content %></p>
      <p id= "comment"><%= link_to(pluralize(section.comments.count,"comment"),{:controller=>"public",:action=>"comments_index", :section_id=>section.id}) %></p>

       <% else %>
     

      <p id="content1"><%= section.content %></p>
      <p id="comment"><%= link_to(pluralize(section.comments.count,"comment"),{:controller=>"public",:action=>"comments_index", :section_id=>section.id}) %></p>

 <% end %>
          
       </div>

<% end %>
