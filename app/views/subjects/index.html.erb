
<div class ="subjects index">

<h1>Subjects</h1>

  <%= link_to(image_tag('plus_sign.png', :size=> "11x11", :alt=> "+") + "Add new Subject",{action: :new}, class:"action new") %>

<% if @subjects.size > 0 %>

  <table class ="listing" summary="Subject list" >

      <tr class ="header">

         <th>&nbsp;</th>
         <th>Subject </th>
         <th>Visible</th>
         <th>Pages </th>
         <th>Actions </th>


       </tr>
          
         <% @subjects.each do |subject| %>


        <tr class="<%= cycle('odd', 'even') %>">
           <td><%= subject.position %></td>
           <td><%= subject.name %></td>
           <td class="center"><%= subject.visible ? 'Yes' : 'No' %></td>
           <td class="center"><%= subject.pages.size %></td>
           <td class="actions">
                 
                <%= link_to("View Pages",{:controller=>'pages', :action=> 'index', :subject_id=>subject.id}, :class=>"action show")%>
                <%= link_to("Show",{action: :show,id:subject.id,subject_id:subject.id}, :class=>"action show") %>
                <%= link_to("Edit",{action: :edit,id:subject.id,subject_id:subject.id}, :class=>"action edit") %>
                <%= link_to("Delete",{action: :delete,id:subject.id,subject_id:subject.id},:class=>"action delete") %>


            </td>
          

       </tr>

       <% end %>

 </table>

<% else %>

   <h2> There is no subject to show </h2>


<% end %>

</div>
